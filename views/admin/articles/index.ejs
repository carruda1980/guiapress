<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <h1>Artigos</h1>
    <a class="btn btn-success" href="/admin/articles/new">Cadastrar artigo</a>
    <br>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => { %>
                <tr>
                    <th><%= article.id %></th>
                    <th><%= article.title %></th>
                    <th><%= article.slug %></th>
                    <th><%= article.category.title %></th>
                    <th>
                        <a class="btn btn-warning" href="/admin/articles/edit/<%= article.id %>">Editar</a>
                        <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmDeletion(event, this)">
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </th>
                </tr>
            <% })%>        
        </tbody>
    </table>
</div>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmDeletion(event, form){
        event.preventDefault();
        var confirmation = confirm("Você realmente deseja deletar este artigo?");
        if(confirmation){
            form.submit();
        }else{

        }
    }
</script>