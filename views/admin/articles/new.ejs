<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <br>
    <div class="card">
        <div class="card-header">
            Novo artigo
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/save">
                <input class="form-control" type="text" name="title" placeholder="Informe um novo artigo"><br>
                <textarea class="form-control" id="body" name="body"></textarea><br>
                <button class="btn btn-success">
                    Cadastrar
                </button>
            </form>
        </div>
    </div>
</div>
<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#body",
        plugins: [
            'advlist autolink link image lists print preview searchplace wordcount table insertdatetime'
        ]
    })
</script>