<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <h1>Categorias</h1>
    <a class="btn btn-success" href="/admin/categories/new">Cadastrar categoria</a>
    <br>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                        <a class="btn btn-warning" href="/admin/categories/edit/<%= category.id %>">Editar</a>
                        <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDeletion(event, this)">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                        
                    </th>
                </tr>
            <% }) %>
            
        </tbody>
    </table>
</div>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmDeletion(event, form){
        event.preventDefault();
        var confirmation = confirm("Você realmente deseja deletar esta categoria?");
        if(confirmation){
            form.submit();
        }else{

        }
    }
</script>